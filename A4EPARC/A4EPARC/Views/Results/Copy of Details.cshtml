                @Html.DisplayFor(m => m.CaseWorkerName, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.CaseWorkerId, new { @class = "col-sm-6 control-label" })
            <div class="col-md-6">
                @Html.DisplayFor(m => m.CaseWorkerId, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Surname, new { @class = "col-md-6 control-label" })
            <div class="col-md-6">
                @Html.DisplayFor(m => m.Surname, new { @class = "form-control" })
