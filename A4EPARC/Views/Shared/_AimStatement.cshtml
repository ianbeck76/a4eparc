@model A4EPARC.ViewModels.ClientViewModel

<div class="container" style="border: 5px solid; padding-left: 20px; padding-bottom: 40px; background-color: white; -webkit-border-radius: 10px; -moz-border-radius: 10px; border-radius: 10px;">

    @{
        var items = Model.SiteLabels.Where(s => s.Name.Contains("AimStatement"));
        
    var i = 0;

    foreach (var item in items)
    {
        if (i == 0)
        {
            <div class="row">
                <h2 id="@item.Name">@item.Description</h2>
            </div>
        }
        else
        {
            if (!string.IsNullOrEmpty(@item.Description))
            {
                if (i < items.Count() - 1)
                {
                    <div class="row">
                        <h4 id="@item.Name">@item.Description</h4>
                    </div>
                }
            }
        }
        i++;
    }
    }
    <div class="row">
        <div class="col-md-1 col-sm-2 col-xs-2">
            @Html.CheckBoxFor(m => m.AcceptCheckBox, new { @class = "form-control" })
            @Html.ValidationMessage("CheckBox", new { @style = "color:red;" })
        </div>
        <div class="col-md-11 col-sm-10 col-xs-10">
            <h4 id="AimStatement7">@Model.SiteLabels.LastOrDefault(a => a.Name.Contains("AimStatement")).Description</h4>
        </div>
    </div>

    <br />
    <div class="row float-left">
        <p style="color: #283E94">&copy;&nbsp;Esher House Pty Ltd</p>
    </div>
</div>
<br />
