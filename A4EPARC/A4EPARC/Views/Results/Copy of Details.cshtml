@model A4EPARC.ViewModels.ClientViewModel

<div class="container">

    <h2 class="text-center no-print">Result Details</h2>
            
        <div class="form-group">
            @Html.LabelFor(m => m.CaseWorkerName, new { @class = "col-sm-6 control-label" })
