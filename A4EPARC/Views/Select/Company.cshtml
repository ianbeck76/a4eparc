@model List<KeyValuePair<int,string>>
    
<div class="row">
    <div class="col-sm-4 col-sm-offset-4">

        <p><br /><br /></p>
@using (Html.BeginForm("Company", "Select", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Select a Company</h3>
            </div>
            <div class="panel-body">
                @foreach (var company in Model)
                {
                    <p class="text-center">
                        <button type="submit" value="@company.Key" class="btn btn-primary btn-block" name="CompanySelected">@company.Value</button>
                    </p>
                }
            </div>
        </div>
}
    </div>
</div>