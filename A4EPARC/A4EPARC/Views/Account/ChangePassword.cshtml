@model A4EPARC.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}


@using (Html.BeginForm("ChangePassword", "Account"))
{   
<div class="form-horizontal row">
    <div class="col-xs-10 col-sm-6 col-md-6 col-lg-4 col-xs-offset-1 col-sm-offset-3 col-md-offset-3 col-lg-offset-4">
        <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Change Password</h3>
                </div>
                <div class="panel-body">
                <div class="form-group">
                        @if (ViewBag.ChangePassword != null && ViewBag.ChangePassword)
                        {
                            <p>This is a new account or your account has been locked so you are required to change your password.</p>
                        }
                        <p>New passwords are required to be a minimum of 8 characters in length and contain at least one numeric character.</p>
                    </div>

                <div class="form-group">
                    <div class="col-12 validation">
                        @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-6 control-label" })
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "col-md-6 control" })
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-6 control-label" })
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "col-sm-6 control" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-6 control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-sm-6 control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
                <div class="form-group">
                    <div class="col-xs-6 col-xs-offset-3">
                        <input type="submit" value="Change Password" class="btn btn-primary btn-block btn"/>
                    </div>
                </div>
                </div>
            </div>
                      </div>
    </div>
}
