@model A4EPARC.Models.ForgottenPasswordModel

@{
    ViewBag.Title = "Forgotten Password";
}


@using (Html.BeginForm("ForgottenPassword", "Account"))
{   
<div class="form-horizontal row">
    <div class="col-sm-4 col-sm-offset-4">

        <p><br /></p>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Forgotten Password</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-6 control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "col-sm-6 control" })
                    @Html.ValidationMessageFor(m => m.Email)
                    @Html.ValidationMessage("EmailDoesntExist")
                </div>

                <div class="form-group">
                    <div class="col-xs-6 col-xs-offset-3">
                        <input type="submit" value="Reset Password" class="btn btn-primary btn-block btn"/>
                    </div>
                </div>
                  <div class="row">
                      <div class="form-group">
                          <p class="text-center">
                              Clicking Reset Password will send an email to your registered address
                          </p>
                      </div>
                  </div>
            </div>
             </div>
    </div>
</div>
}
